<!doctype html>

<html>
<head>
	<title>Login page</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/login.css" rel="stylesheet">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/introHCI.css" rel="stylesheet">
	
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>

<!-- FB login sdk -->
    {{> facebook}}
    <script src="/js/facebook.js"></script>

</head>




<body>
	<div class="container">
		<h2 id="course_title" >NotesCast</h2>
	</div>

    <div class="container">
		<p id="welcome_login">Welcome back to the largest podcats community that offers university level courses!</p>
	</div>


         
	    <div class="container">
        <!--start of the login form-->
		 <form action="/action_page.php" method="post">

		  <div class="imgcontainer">
		    <img src="https://i.pinimg.com/originals/73/0e/d3/730ed3fee48c368cb76ca21a7edaa4fa.jpg" alt="Avatar" class="avatar">
		  </div>

		  <div class="container">
		    <label for="uname"><b>Username</b></label>
		    <input type="text" placeholder="Enter Username" name="uname" required>

		    <label for="psw"><b>Password</b></label>
		    <input type="password" placeholder="Enter Password" name="psw" required>
		        
		    <button type="submit" onclick="handleLogin()">Login</button>
		    <label>
		      <input type="checkbox" checked="checked" name="remember"> Remember me
		    </label>
		  </div>

		  <div class="container" style="background-color:#f1f1f1">
		  	   <p>login with Facebook</p>
			   <!--facebook login button-->
			            <div class="fb-login">
			              <fb:login-button auto_logout_link="true" scope="public_profile, email" onlogin="checkLoginState()">
			              </fb:login-button>
			            </div>


		  </div>

		</form>
        <!--end of the login form-->

  





	</div>
	
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>

	<script>
        function handleLogin() {
            window.location.href = `http://localhost:3000/home/Clair Li`;
        }
    </script>
</body>
</html>
